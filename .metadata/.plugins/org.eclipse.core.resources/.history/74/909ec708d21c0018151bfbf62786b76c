package app;

public class Pizza {
	public enum type{
		MARGHERITA("sos pomidorowy + szynka"), CAPRICIOSA("Sos pomidorowy+ser+pieczark"), PROSCIUTTO("sos pomidorowy+ser+szynka");
	
	private String description;
	type(String desc){
		description=desc;
	}
	
	public void setDescription(String description) {
		this.description = description;
	}

	public String getDescription() {
		return description;
	}	
	}

	@Override
	public String toString() {
		return "Pizza [toString()=" + super.toString() + "]";
	}
	
}
